page {
  height: 100%;
  color: #666;
}

.comment-container {
  width: 100%;
  height: 100%;
  background: #fff;
}

.comment-title {
  width: 100%;
  height: 8vh;
  text-indent: 1em;
  line-height: 8vh;
  color: #434343;
  background: #fff;
}

.comment-content {
  width: 100%;
  height: 84vh;
  background: #fff;
}

.comment-content.slideUp {
  height: 71vh;
}

.comment-item {
  position: relative;
  width: 100%;
  height: auto;
  font-size: 18px;
  font-family: "楷体";
}

.comment-item::after {
  content: '';
  position: absolute;
  bottom: 0;
  width: 100%;
  height: 1px;
  background: linear-gradient(to left, orangered, #368);
}

.comment-user {
  height: 90rpx;
  padding: 10rpx 20rpx;
  background: #fff;
  border-bottom: 1px dotted #222;
}

.comment-user .user-avatar {
  width: 80rpx;
  height: 80rpx;
  margin-right: 40rpx;
}

.comment-details {
  width: 100%;
  padding: 20rpx 0;
  background: #fff;
}

.details-txt {
  padding: 30rpx 20rpx;
}

.details-img {
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  align-items: center;
  width: 100%;
  height: 30vw;
}

.details-img image {
  width: 30vw;
  height: 30vw;
  border-radius: 10rpx;
  box-shadow: 0 0 4px #222;
}

.details-record {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  width: 40%;
  height: 50rpx;
  padding: 10rpx;
  margin: 0 40rpx;
  border-radius: 10rpx;
  box-shadow: 0 0 9rpx #222;
}

.details-record image {
  width: 50rpx;
  height: 50rpx;
}

.comment-postscript {
  width: 100%;
  height: 60rpx;
  line-height: 60rpx;
  background: #fff;
  text-indent: 1em;
}

.comment-input {
  width: 100%;
  box-shadow: 0 0 3px #222;
}

.control-panel {
  width: 100%;
  height: 7vh;
}

.comment-input .control-panel image {
  width: 5vh;
  height: 5vh;
}

.comment-input .control-panel .keyboard {
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  align-items: center;
  width: 70%;
}

.comment-input .control-panel .keyboard .interface {
  width: 70%;
  padding: 0;
  height: 5vh;
  margin-right: 20rpx;
  border-radius: 10rpx;
  text-align: left;
  line-height: 5vh;
  font-size: 12px;
  box-shadow: 0 0 4px #222;
  background: #fff;
}

.comment-input .control-panel .keyboard .voice {
  text-align: center;
}

.comment-input .control-panel .keyboard .recording {
  background: rgba(122, 42, 55, 0.8);
  color: #fff;
}

.comment-input .control-panel button {
  height: 5vh;
  line-height: 5vh;
}

.choosePhoto {
  width: 100%;
  height: 13vh;
}

.choosePhoto .choose {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin: 0 20rpx;
  padding: 10rpx 16rpx;
}



.choosePhoto image {
  padding: 2vh;
  margin-bottom: 6rpx;
  height: 3vh;
  width: 3vh;
  box-shadow: 0 0 8rpx #434343;
  border-radius: 10rpx;
}

.choosePhoto text{
  display: inline-block;
  height: 16px;
  letter-spacing: 8rpx;
  text-align: justify;
  font-size: 15px;
  line-height: 16px;
  color: #000;
}
.choosePhoto view.imgShowBox {
  display:flex;
  flex-direction: row;
  justify-content: space-around;
  align-items: center;
  width: 80%;
}

.choosePhoto .imgShowBox .showImg{
  position:relative;
  width:120rpx;
  height:120rpx;

}
.imgShowBox .showImg image{
  width:100%;
  height:100%;
  box-shadow:0;
  padding:0;
}
