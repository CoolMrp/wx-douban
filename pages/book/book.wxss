/* pages/book/book.wxss */
page{
  width: 100%;
  height:100%;
}
.container{
  position: relative;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  align-items: center;
}
.search {
  position: fixed;
  top:0;
  left: 0;
  z-index: 1000;
  display: flex;
  justify-content: center;
  align-items: center;
  width: 100%;
  height: 8vh;
  background: #389;
}

.search .book-search {
  position: relative;
  width: 80%;
  height: 60%;
  border-radius: 20rpx;
  background:#fff;
  box-shadow: 0 0 10rpx #222;
  padding-left: 30rpx;
}

.search image {
  position: absolute;
  right: 90rpx;
  width: 40rpx;
  height: 40rpx;
}
