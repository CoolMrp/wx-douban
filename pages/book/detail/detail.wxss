.container .abstract-box{
  display: flex;
  flex-direction: row;
  justify-content:space-between;
  align-content: center;
  position: absolute;
  top: 560rpx;
  width: 100%;
  height: 600rpx;
}
.container .abstract-box .abstract{
  width:92%;
  padding: 30rpx;
  font-size: 18px;
  line-height: 24px;
  font-family: "楷体";
  color: lightslategray;
  text-indent: 2em;
}