@import "../../template-star/star.wxss";
page{
  width: 100%;
  height: 100%;
}
.container{
  width: 100%;
  height: 100%;
  padding:30rpx 0 0 30rpx;
  background: lightblue;
  color: #333;
}
.movie-item{
  display: inline-block;
  width: 210rpx;
  font-size:14px;
  margin-right: 30rpx;
  text-align: center;
}
.movie-item .item-title{
  line-height:45rpx;
  text-shadow:0 0 1px #ccc;
}
.movie-item .item-pic{
  width:100%;
  height: 270rpx;
  box-shadow:0 0 4px #222;
  border-radius:5rpx;
}
.movie-item .item-star{
  width: 100%;
  height: 25px;
}
