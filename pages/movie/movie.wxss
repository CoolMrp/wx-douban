@import "./list-template/list-template.wxss";
@import "../template-star/star.wxss";
.container {
  width: 100%;
  height: 100%;
  background: #fff;
  color: #333;
}
.search {
  display: flex;
  justify-content: center;
  align-items: center;
  width: 100%;
  height: 8vh;
  background: #368;
}

.search .book-search {
  position: relative;
  width: 80%;
  height: 60%;
  border-radius: 20rpx;
  background:#fff;
  box-shadow: 0 0 10rpx #222;
  padding-left: 30rpx;
}

.search image {
  position: absolute;
  right: 90rpx;
  width: 40rpx;
  height: 40rpx;
}
.movie-list {
  width: 100%;
  height: 380rpx;
  padding: 20rpx;
  background: lightblue;
  box-shadow: 0 0 10rpx #fff;
}

.list-title {
  width: 90%;
  height: 60rpx;
  font-family: '微软雅黑';
  font-size: 32rpx;
  line-height: 60rpx;
  color: lightcoral;
  font-weight: bold;
}

.list-items {
  width: 100%;
}


.movie-item{
   height:300rpx; 
   font-size:14px;
}
.movie-item .item-title{
  line-height:50rpx;
  text-shadow:0 0 1px #ccc;
  text-align: center;
}
.movie-item .item-pic{
  width:25vw;
  box-shadow:0 0 4px #222;
  border-radius:5rpx;
}
.movie-item .item-star{
  width: 100%;
  height: 25px;
}